# ===================================================================
# DEVELOPMENT ENVIRONMENT CONFIGURATION
# ===================================================================
# This is the default configuration for local development
# Copy to .env and adjust as needed
# ===================================================================

# Flask Configuration
FLASK_ENV=development
FLASK_DEBUG=1
FLASK_SECRET_KEY=dev-secret-key-change-in-production

# MySQL Database Configuration (local development)
# Default assumes MySQL running on localhost
MYSQL_HOST=localhost
MYSQL_PORT=3306
MYSQL_USER=root
MYSQL_PASSWORD=
MYSQL_DATABASE=EchoDB

# Connection Pool Configuration
# Smaller pool for development to reduce resource usage
MYSQL_POOL_SIZE=3
MYSQL_POOL_MAX_OVERFLOW=2
MYSQL_POOL_TIMEOUT=30

# Logging Configuration
# Development uses DEBUG level for verbose logging
LOG_LEVEL=DEBUG
LOG_FORMAT=%(asctime)s - %(name)s - %(levelname)s - %(message)s

# Session Configuration
PERMANENT_SESSION_LIFETIME_DAYS=7
SESSION_COOKIE_SECURE=False
SESSION_COOKIE_HTTPONLY=True
SESSION_COOKIE_SAMESITE=Lax

